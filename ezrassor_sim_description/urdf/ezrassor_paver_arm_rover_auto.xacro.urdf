<?xml version='1.0'?>

<robot name="ezrassor_arm"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Including separate components of the robot -->
    <!-- ARM -->
    <xacro:include filename="$(find ezrassor_sim_description)/urdf/paver_arm.xacro"/>
    <!-- CART -->
    <xacro:property name="cameraSize" value="0.01"/>
	<xacro:property name="cameraMass" value="0.1"/>
	<xacro:include filename="$(find ezrassor_sim_description)/urdf/materials.xacro" />
	<xacro:include filename="$(find ezrassor_sim_description)/urdf/macros.xacro" />
	<xacro:include filename="$(find ezrassor_sim_description)/urdf/wheel.xacro" />
	<xacro:include filename="$(find ezrassor_sim_description)/urdf/drum_arm.xacro" />
	<xacro:include filename="$(find ezrassor_sim_description)/urdf/drum.xacro" />
	<xacro:include filename="$(find ezrassor_sim_description)/urdf/imu.xacro" />

    <!-- CART PARTS -->
    <link name='base_link'>
		<pose>0 0 0 0 0 0</pose>
	</link>
	<link name='body'>
		<pose>0 0 0 0 0 0</pose>
		<inertial>
			<mass value="15.0"/>
			<origin xyz="0 0 0" rpy=" 0 0 0"/>
			<inertia ixx="0.5" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="0.1" />
		</inertial>
		<collision name='collision'>
			<origin xyz="0 0 0" rpy=" 0 0 0"/>
			<geometry>
				<xacro:base_unit/>
			</geometry>
		</collision>
		<visual name='base_link_visual'>
			<origin xyz="0 0 0" rpy=" 0 0 0"/>
			<geometry>
				<xacro:base_unit/>
			</geometry>
		</visual>
	</link>
    <gazebo reference="base_link">
        <selfCollide>0</selfCollide>
    </gazebo>
    <joint name="body_joint" type="fixed">
		<axis xyz="0 0 0"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<parent link="base_link"/>
		<child link="body"/>
	</joint>
    <!--Macros representing different parts of the ezrassor.-->
	<xacro:ezrassor_wheel wheel_prefix="left_wheel_front" yaw="0">
		<origin xyz="0.20 0.285 0" rpy="0 0 0"/>
	</xacro:ezrassor_wheel>
	<xacro:ezrassor_wheel wheel_prefix="right_wheel_front" yaw="${pi}">
		<origin xyz="0.20 -0.285 0" rpy="0 0 0"/>
	</xacro:ezrassor_wheel>
	<xacro:ezrassor_wheel wheel_prefix="left_wheel_back" yaw="0">
		<origin xyz="-0.20 0.285 0" rpy="0 0 0"/>
	</xacro:ezrassor_wheel>
	<xacro:ezrassor_wheel wheel_prefix="right_wheel_back" yaw="${pi}">
		<origin xyz="-0.20 -0.285 0" rpy="0 0 0"/>
	</xacro:ezrassor_wheel>
    <xacro:drum_arm arm_prefix="arm_back" front_facing="false">
		<origin xyz="0 0 0" rpy="3.1415 0 3.1415"/>
	</xacro:drum_arm>

    <!-- Since the drum intertias are perpendicular to the rest of the robot, 
        the rp values need to be rotated by pi/2 -->
    <xacro:drum drum_prefix="drum_back" arm_prefix="arm_back" front_facing="false">
		<origin xyz="0 0 0" rpy="4.71 1.57 3.14159"/>
    </xacro:drum>	
    <xacro:imu imu_prefix="imu" camera_size="${cameraSize}" camera_mass="${cameraMass}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:imu>
    <link name="camera_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
            <material name="green"/>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.01 0.01 0.01"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
        </inertial>
    </link>
    <joint name="camera_joint" type="fixed">
        <parent link="base_link"/> 
        <child link="camera_link"/>
        <origin xyz="0.215 0 0.05" rpy="0 0 0"/>
        <origin xyz=".3 0 -.1" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>
    <link name="camera_depth_frame"/>
    <joint name="camera_depth_joint" type="fixed">
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
        <parent link="camera_link"/>
        <child link="camera_depth_frame"/>
    </joint>
    <gazebo reference="camera_link">
        <sensor name="depth_camera" type="depth">
            <visualize>true</visualize>
            <update_rate>30.0</update_rate>
            <camera name="camera">
                <horizontal_fov>1.29154</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.105</near>
                    <far>10</far>
                </clip>
            </camera>
            <plugin name="depth_camera_controller" filename="libgazebo_ros_camera.so">
                <baseline>0.2</baseline>
                <alwaysOn>true</alwaysOn>
                <updateRate>0.0</updateRate>
                <frame_name>camera_depth_frame</frame_name>
                <pointCloudCutoff>0.105</pointCloudCutoff>
                <pointCloudCutoffMax>10</pointCloudCutoffMax>
                <distortionK1>0</distortionK1>
                <distortionK2>0</distortionK2>
                <distortionK3>0</distortionK3>
                <distortionT1>0</distortionT1>
                <distortionT2>0</distortionT2>
                <CxPrime>0</CxPrime>
                <Cx>0</Cx>
                <Cy>0</Cy>
                <focalLength>0</focalLength>
                <hackBaseline>0.07</hackBaseline>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Defining ARM Body -->
    <!-- LINK 1-->
    <link name='link1'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK1/>
            </geometry>
        </collision>
        <visual name='link1'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK1/>
            </geometry>
        </visual>
    </link>
    <!-- LINK 2-->
    <link name='link2'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0 0.08 0.135" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK2/>
            </geometry>
        </collision>
        <visual name='link2'>
            <origin xyz="0 0.08 0.135" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK2/>
            </geometry>
        </visual>
    </link>
    <!-- LINK 3-->
    <link name='link3'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0.25 0.1 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK3/>
            </geometry>
        </collision>
        <visual name='link3'>
            <origin xyz="0.25 0.1 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK3/>
            </geometry>
        </visual>
    </link>
    <!-- LINK 4-->
    <link name='link4'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0.23 0 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK4/>
            </geometry>
        </collision>
        <visual name='link4'>
            <origin xyz="0.23 0 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK4/>
            </geometry>
        </visual>
    </link>
    <!-- LINK 5-->
    <link name='link5'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0 0.12 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK5/>
            </geometry>
        </collision>
        <visual name='link5'>
            <origin xyz="0 0.12 0" rpy=" 0 0 0"/>
            <geometry>
               <xacro:LINK5/>
            </geometry>
        </visual>
    </link>
    <!-- LINK 6-->
    <link name='link6'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0.096 0 -0.24" rpy=" 0 0 0"/>
            <geometry>
                <xacro:LINK6/>
            </geometry>
        </collision>
        <visual name='link6'>
            <origin xyz="0.096 0 -0.24" rpy=" 0 0 0"/>
            <geometry>
                 <xacro:LINK6/>
            </geometry>
        </visual>
    </link>
    <!-- CAMERA-->
    <link name='arm_camera'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="0.1"/> 
            <origin xyz="0.0 0.0 0.0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <visual name='arm_camera'>
            <origin xyz="0.04 0.0 -0.04" rpy=" 0 0 0"/>
            <geometry>
                <xacro:CAMERA/>
            </geometry>
        </visual>
    </link>
    <!-- GRABBER1-->    
    <link name='grabber1'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:GRABBER1/>
            </geometry>
            <contact_coefficients>
                <mu>1</mu>
            </contact_coefficients>
            <surface>
                <bounce>
                    <restitution_coefficient>0</restitution_coefficient>
                </bounce>
                <friction>
                    <ode>
                        <fdir1>0 0 0</fdir1>
                        <mu>1</mu>
                        <mu2>1</mu2>
                        <slip1>0</slip1>
                        <slip2>0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual name='grabber1'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                 <xacro:GRABBER1/>
            </geometry>
        </visual>
    </link>
    <!-- GRABBER2-->
    <link name='grabber2'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                 <xacro:GRABBER2/>
            </geometry>
            <contact_coefficients>
                <mu>1</mu>
            </contact_coefficients>
            <surface>
                <bounce>
                    <restitution_coefficient>0</restitution_coefficient>
                </bounce>
                <friction>
                    <ode>
                        <fdir1>0 0 0</fdir1>
                        <mu>1</mu>
                        <mu2>1</mu2>
                        <slip1>0</slip1>
                        <slip2>0</slip2>
                    </ode>
                </friction>
            </surface>
        </collision>
        <visual name='grabber2'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <xacro:GRABBER2/>
            </geometry>
        </visual>
    </link>
    <!-- PLATFORM-->    
    <link name='platform'>
        <pose>0 0 0 0 0 0</pose>
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0" ixy="0" ixz="0"
                iyy="0" iyz="0"
                izz="0"
            />
        </inertial>
        <collision name='collision'>
            <origin xyz="-0.5 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="1 1 0.08"/>
            </geometry>
            <contact_coefficients>
                <mu>1</mu>
            </contact_coefficients>
            </collision>
            <visual name='platform'>
            <origin xyz="0.1 0.06 0.1" rpy=" 0 0 0"/>
            <geometry>
                <xacro:PLATFORM/>
            </geometry>
        </visual>
    </link>

    <!-- Linking all the robot parts ARM -->
    <joint type="fixed" name="jointRoverLink1">
        <origin xyz="0.55 -0.1 0.27" rpy="0 0 0"/>
        <child link="link1"/>
        <parent link="base_link"/>
        <axis xyz="0 0 0" rpy="0 0 0"/>
    </joint>
    <joint type="continuous" name="joint12">
        <origin xyz="0 -0.12 0.09" rpy="0 0 0"/>
        <child link="link2"/>
        <parent link="link1"/>
        <axis xyz="0 0 1" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>
    <joint type="continuous" name="joint23">
        <origin xyz="0 0.037 0.13" rpy="0 0 0"/>
        <child link="link3"/>
        <parent link="link2"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>
    <joint type="continuous" name="joint34">
        <origin xyz="0.44 -0.037 0" rpy="0 0 0"/>
        <child link="link4"/>
        <parent link="link3"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>
    <joint type="continuous" name="joint45">
        <origin xyz="0.42 0.0 0" rpy="0 0 0"/>
        <child link="link5"/>
        <parent link="link4"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>
    <joint type="continuous" name="joint56">
        <origin xyz="0 0.12 0" rpy="0 0 0"/>
        <child link="link6"/>
        <parent link="link5"/>
        <axis xyz="0 0 1" rpy="0 0 0"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>
    <joint name="arm_camera_joint" type="fixed">
        <axis xyz="0 0 0" />
        <origin xyz="0 0.4 0" rpy="0 0.4 0"/>
        <parent link="link1"/>
        <child link="arm_camera"/>
    </joint>
    <joint name="platform_joint" type="fixed">
        <axis xyz="0 0 0" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="link1"/>
        <child link="platform"/>
    </joint>
    <joint type="prismatic" name="grabber_joint1">
        <origin xyz="0.1 -0.31 -0.24" rpy="0 0 0"/>
        <child link="grabber1"/>
        <parent link="link6"/>
        <axis xyz="1 1 0" rpy="0 0 0"/>
        <dynamics damping="1.0" friction="0.5"/>
        <limit lower="-0.02" upper="0.0224" effort="10" velocity="0.005"/>
    </joint>
    <joint type="prismatic" name="grabber_joint2">
        <origin xyz="0.1 0.31 -0.24" rpy="0 0 0"/>
        <child link="grabber2"/>
        <parent link="link6"/>
        <axis xyz="1 -1 0" rpy="0 0 0"/>
        <dynamics damping="1.0" friction="0.5"/>
        <limit lower="-0.02" upper="0.0225" effort="10" velocity="0.005"/>
    </joint>

    <!-- ROS2 Control Gazebo System -->

    <!-- CART CONTROLS -->
    <ros2_control name="GazeboSystem" type="system">
        <hardware>
            <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </hardware>
        <joint name="left_wheel_front_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="left_wheel_back_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="right_wheel_front_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="right_wheel_back_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="arm_back_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="drum_back_joint">
            <command_interface name="velocity">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>

        <!-- ARM CONTROLS -->

        <joint name="joint12">
            <command_interface name="position">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="joint23">
            <command_interface name="position">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="joint34">
            <command_interface name="position">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="joint45">
            <command_interface name="position">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="joint56">
            <command_interface name="position">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="position" />
            <state_interface name="velocity" />
        </joint>
        <joint name="grabber_joint1">
            <command_interface name="effort">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="effort" />
            <state_interface name="velocity" />
        </joint>
        <joint name="grabber_joint2">
            <command_interface name="effort">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <state_interface name="effort" />
            <state_interface name="velocity" />
        </joint>


    </ros2_control>
    <gazebo>
        <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
            <parameters>$(find ezrassor_sim_description)/config/controllers.yaml</parameters>
        </plugin>
    </gazebo>

    
</robot>