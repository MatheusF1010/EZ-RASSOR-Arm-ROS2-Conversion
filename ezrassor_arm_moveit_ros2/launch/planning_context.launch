<launch>
  <!-- By default we do not overwrite the URDF. Change the following to true to change the default behavior -->
  <let name="load_robot_description" default="false"/>

  <!-- The name of the parameter under which the URDF is loaded -->
  <let name="robot_description" default="robot_description"/>

  <!-- Load universal robot description format (URDF) -->
  <param if="$(var load_robot_description)" name="$(var robot_description)" textfile="$(find-pkg-share ezrassor_arm_moveit)/urdf/arm_model.urdf"/>

  <!-- The semantic description that corresponds to the URDF -->
  <param name="$(var robot_description)_semantic" textfile="$(find-pkg-share ezrassor_arm_moveit)/config/ezrassor.srdf" />

  <!-- Load updated joint limits (override information from URDF) -->
  <group ns="$(var robot_description)_planning">
    <rosparam command="load" file="$(find-pkg-share ezrassor_arm_moveit)/config/joint_limits.yaml"/>
    <rosparam command="load" file="$(find-pkg-share ezrassor_arm_moveit)/config/cartesian_limits.yaml"/>
  </group>

  <!-- Load default settings for kinematics; these settings are overridden by settings in a node's namespace -->
  <group ns="$(var robot_description)_kinematics">
    <rosparam command="load" file="$(find-pkg-share ezrassor_arm_moveit)/config/kinematics.yaml"/>

  </group>

</launch>
